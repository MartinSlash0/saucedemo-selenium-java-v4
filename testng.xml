<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Sauce Demo Test Suite" verbose="1">

    <test name="Login Tests" preserve-order="true">
        <classes>
            <class name="org.example.SeleniumTest">
                <methods>
                    <include name="validLoginTest"/>
                    <include name="invalidLoginTest"/>
                    <include name="logoutTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="E-Commerce Tests" preserve-order="true">
        <classes>
            <class name="org.example.SeleniumTest">
                <methods>
                    <include name="checkoutTest"/>
                    <include name="checkoutNoInfoTest"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>